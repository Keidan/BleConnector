<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/table"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginBottom="5dp"
  android:layout_marginTop="5dp"
  android:background="@drawable/list_color_selector"
  android:paddingEnd="0dp"
  android:paddingStart="20dp"
  android:stretchColumns="1">

  <TableRow android:layout_marginTop="5dp">

    <TextView
      android:id="@+id/tvName"
      android:layout_width="1dp"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_span="2"
      android:singleLine="false"
      android:textSize="12sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/ivUpload"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_file_upload_white" />

      <ImageView
        android:id="@+id/ivDownload"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_file_download_white" />
    </LinearLayout>
  </TableRow>

  <TableRow>

    <TextView
      android:layout_width="1dp"
      android:layout_height="wrap_content"
      android:singleLine="false"
      android:text="@string/uuid"
      android:textAlignment="viewStart"
      android:textColor="@color/textColorDisabled"
      android:textSize="12sp"
      android:textStyle="italic" />

    <TextView
      android:id="@+id/tvUUID"
      android:layout_width="1dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_span="2"
      android:singleLine="false"
      android:textAlignment="viewStart"
      android:textSize="12sp"
      android:textStyle="italic" />
  </TableRow>

  <TableRow android:layout_marginBottom="5dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/properties"
      android:textColor="@color/textColorDisabled"
      android:textSize="12sp"
      android:textStyle="italic" />

    <TextView
      android:id="@+id/tvProperties"
      android:layout_width="1dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_span="2"
      android:singleLine="false"
      android:textAlignment="viewStart"
      android:textSize="12sp"
      android:textStyle="italic" />
  </TableRow>

  <TableRow
    android:id="@+id/trData"
    android:layout_marginBottom="5dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/data"
      android:textColor="@color/textColorDisabled"
      android:textSize="12sp"
      android:textStyle="italic" />

    <TextView
      android:id="@+id/tvData"
      android:layout_width="1dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_span="2"
      android:singleLine="false"
      android:textAlignment="viewStart"
      android:textSize="12sp"
      android:textStyle="italic" />
  </TableRow>
</TableLayout>