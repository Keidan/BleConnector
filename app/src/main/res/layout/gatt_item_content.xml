<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
    android:paddingEnd="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:stretchColumns="1"
    android:background="@drawable/list_color_selector">

    <TableRow
        android:layout_marginTop="5dp">
        <TextView
            android:layout_span="2"
            android:id="@+id/tvName"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/uuid"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/textColorDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvUUID"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
        android:layout_marginBottom="5dp">
        <TextView
            android:text="@string/properties"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/textColorDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvProperties"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>
</TableLayout>